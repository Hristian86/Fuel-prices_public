@model IEnumerable<AkciqApp.Models.Models.GasStation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary mr-1" asp-action="Create">Create New</a>

    <a class="btn btn-success " asp-action="UpdateTables">Update Tables</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GasStationURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GasStationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParamStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParamEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GasStationURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GasStationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParamStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParamEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@*@model AkciqApp.Models.Models.GasStation*@
@model AkciqApp.Models.GasViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GasStation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GasStationURL" class="control-label"></label>
                <input asp-for="GasStationURL" class="form-control" />
                <span asp-validation-for="GasStationURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GasStationName" class="control-label"></label>
                <input asp-for="GasStationName" class="form-control" />
                <span asp-validation-for="GasStationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParamStart" class="control-label"></label>
                <input asp-for="ParamStart" class="form-control" />
                <span asp-validation-for="ParamStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParamEnd" class="control-label"></label>
                <input asp-for="ParamEnd" class="form-control" />
                <span asp-validation-for="ParamEnd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label"></label>


                <select asp-for="City">
                    @{
                        foreach (var cities in Model.Addresses)
                        {
                            <option value="@cities.City">@cities.City</option>
                        }
                    }
                </select>

                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            @*<div class="form-group">
            <label asp-for="City" class="control-label"></label>

            <input asp-for="City" class="form-control" />

            <span asp-validation-for="City" class="text-danger"></span>
        </div>*@

            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

